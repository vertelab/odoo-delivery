<odoo>
    <data>
        <record id="view_delivery_carrier_form" model="ir.ui.view">
            <field name="name">delivery.carrier.pickup.form</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="home_delivery" />
                </field>
            </field>
        </record>

        <template id="payment_delivery" name="Home Delivery Carrier" inherit_id="delivery_carrier_data.payment_delivery">
            <xpath expr="//t[@t-if='delivery.pickup_location']" position="replace">
                  <t t-if="delivery.home_delivery">
                      <span><t t-raw="delivery.carrier_data"/></span>
                  </t>

                  <t t-if="delivery.pickup_location">
                      <span><t t-raw="delivery.carrier_data"/></span>
                  </t>
            </xpath>
        </template>
    </data>
</odoo>
