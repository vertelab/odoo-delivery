<odoo>
    <data>
        <record id="sale_order_home_delivery_partner" model="ir.ui.view">
            <field name="name">sale.order.delivery.partner</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_shipping_id" position="after">
                    <field name="delivery_partner_shipping_id" groups="sale.group_delivery_invoice_address" context="{'default_type':'delivery'}" options="{&quot;always_reload&quot;: True}"/>
                </field>
            </field>
        </record>
    </data>
</odoo>