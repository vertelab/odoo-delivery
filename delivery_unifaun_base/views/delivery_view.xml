<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_delivery_carrier_form_with_provider_unifaun" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.unifaun</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='destination']" position='before'>
                <page string="Unifaun Configuration" attrs="{'invisible': [('delivery_type', '!=', 'unifaun')]}">
                    <group>
                        <group>
                            <field name="unifaun_service_code" attrs="{'required': [('delivery_type', '=', 'unifaun')]}"/>
                            <field name="unifaun_sender" attrs="{'required': [('delivery_type', '=', 'unifaun')]}"/>
                            <field name="unifaun_customer_no" attrs="{'required': [('delivery_type', '=', 'unifaun')]}"/>
                        </group>
                        <group>
                            <field name="unifaun_print_settings_id" attrs="{'required': [('delivery_type', '=', 'unifaun')]}"/>
                            <field name="unifaun_min_weight" attrs="{'required': [('delivery_type', '=', 'unifaun')]}"/>
                        </group>
                        
                        <label for="unifaun_param_ids"/>
                        <field name="unifaun_param_ids" attrs="{'required': [('delivery_type', '=', 'unifaun')]}" />
                    
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
