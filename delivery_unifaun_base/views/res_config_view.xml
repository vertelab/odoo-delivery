<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_unifaun_sale" model="ir.ui.view">
        <field name="name">res.config.settings.unifaun.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@class="row mt16 o_settings_container"]' position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="unifaun">
                    <div class="o_setting_left_pane">
                        <field name="module_delivery_unifaun"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_delivery_ups"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Unifaun
                        </div>
                        <div class="content-group">
                            <div id="sale_delivery_unifaun"></div>
                            <div class="content-group">
                                <div class="mt16" attrs="{'invisible': [('module_delivery_unifaun','=',False)]}">
                                    <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Unifaun Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'unifaun'}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
    <record id="res_config_settings_view_form_unifaun_stock" model="ir.ui.view">
        <field name="name">res.config.settings.unifaun.view.form.inherit.stock</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@class="row mt16 o_settings_container"]' position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="unifaun">
                    <div class="o_setting_left_pane">
                        <field name="module_delivery_unifaun"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_delivery_ups"/>
                        <div class="text-muted">
                            Compute shipping costs and ship with Unifaun
                        </div>
                        <div class="content-group">
                            <div id="sale_delivery_unifaun">
                                <div class="mt16" attrs="{'invisible': [('module_delivery_unifaun', '=', False)]}">
                                    <button name="%(delivery.action_delivery_carrier_form)d" icon="fa-arrow-right" type="action" string="Unifaun Delivery Methods" class="btn-link" context="{'search_default_delivery_type': 'unifaun'}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
