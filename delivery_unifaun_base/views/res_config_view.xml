<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_config_settings" model="ir.ui.view">
            <field name="name">stock settings</field>
            <field name="model">stock.config.settings</field>
            <field name="inherit_id" ref="stock.view_stock_config_settings" />
            <field name="arch" type="xml">
                <form class="oe_form_configuration" position="inside">
                    <separator string="Unifaun" />
                    <group name="unifaun">
                        <field name="unifaun_send_email" />
                        <field name="unifaun_apikey" />
                        <field name="unifaun_password" />
                        <field name="unifaun_url" />
                        <field name="unifaun_receiver_name_method" />
                        <field name="unifaun_package_contents" />
                        <field name="unifaun_template_id" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
